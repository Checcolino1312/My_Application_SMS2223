<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="WrongFolder">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logoanimalapp__1___1_"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/welcomelogin"
        android:layout_width="317dp"
        android:layout_height="159dp"
        android:text="@string/guest_mode"
        android:textAlignment="center"
        android:textColor="@color/primary_dark"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <Button
        android:id="@+id/reportanimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="341dp"
        app:layout_constraintTop_toBottomOf="@id/welcomelogin" />

    <Button
        android:id="@+id/lookingforahouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Looking for a House"
        app:layout_constraintTop_toBottomOf="@id/reportanimal"
        tools:layout_editor_absoluteX="117dp" />

    <Button
        android:id="@+id/addPetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_pet"
        app:flow_horizontalAlign="center"
        app:layout_constraintTop_toBottomOf="@+id/lookingforahouse"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="501dp"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>